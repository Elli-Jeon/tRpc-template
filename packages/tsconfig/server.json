{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "server",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "types": ["node", "express"],
    "module": "CommonJS",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "../../apps/server/dist",
    "rootDir": "../../apps/server",
    "baseUrl": "../../apps/server/src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
