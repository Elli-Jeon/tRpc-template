{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "server",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "resolveJsonModule": true,
    "strict": false,
    "target": "es5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "../../apps/server/dist",
    "rootDir": "../../apps/server"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
